<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_yellow_dark"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".view.CategoryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/my_yellow_light"
            android:fontFamily="sans-serif-condensed"
            android:text="Categoria retetei:"
            android:textColor="#000000"
            android:textSize="28sp" />

        <Button
            android:id="@+id/desertButton"
            android:drawableStart="@drawable/ic_dessert_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prajituri/Desert"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/pizzaButton"
            android:drawableStart="@drawable/ic_pizza_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste/Pizza"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/startersButton"
            android:drawableStart="@drawable/ic_fork_starters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aperitive"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/soupButton"
            android:drawableStart="@drawable/ic_soup_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supe/Ciorbe"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/postButton"
            android:drawableStart="@drawable/ic_pepper_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De post"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/saladButton"
            android:drawableStart="@drawable/ic_salad_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salate"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/fishButton"
            android:drawableStart="@drawable/ic_fish_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peste"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/othersButton"
            android:drawableStart="@drawable/ic_dough_32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Altele"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:backgroundTint="@color/my_yellow_light"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</ScrollView>